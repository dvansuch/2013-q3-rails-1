<h1> Tables </h1>

<table border="1">
	<tr>
		<td><b>Table #</b></td>
		<td><b># chairs</b></td>
		<td></td>
	</tr>
	<% @tables.each do |table| %>
		<tr>
			<td>Table #<%= table.id %></td>
			<td><%= table.number_of_chairs %> chairs</td>
			<% @order = Order.where(table_id: table.id).first %>
			<% if @order == nil  %>
				<td><%== submit_tag "Occupy table #{table.id}" %></td>
			<% else %>
				<td><a href = "/order/<%= @order.id %>">Occupied</a></td>
			<% end %>
		</tr>
	<% end %>
</table>

<h1>Orders</h1>

<table border="1">
	<tr>
		<td><b>Order #</b></td>
		<td><b>Table #</b></td>
		<td><b>Created At</b></td>
		<td><b>Last Ordered At</b></td>
		<td><b>Total Price</b></td>
		<td><b>Paid?</b></td>
	</tr>
	<% @orders.each do |order| %>
	<tr>
		<td>Order #<%= order.id %></td>
		<td>Table #<%= order.table_id %></td>
		<td><%= order.created_at %></td>
		<td><%= order.updated_at %></td>
		<td><%= order.total_price %></td>
		<td><%= order.is_paid %></td>
	</tr>
	<% end %>
</table>